<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.htw.drawingnumbers.PrimaryController">

  <!--  <padding>-->
  <!--    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>-->
  <!--  </padding>-->

  <BorderPane>
    <top>
      <HBox alignment="CENTER">
        <HBox prefHeight="50" alignment="CENTER_LEFT">
          <Label text="Load a .h5 Model and draw a Digit [0-9] to predict:"/>
        </HBox>
        <Label prefWidth="250"/>
        <HBox alignment="CENTER_RIGHT" prefHeight="50">
          <Label fx:id="modelLabel" text="Choose a model..."/>
          <Label prefWidth="10"/>
          <Button text="Load Model" onAction="#onChooseModel"/>
        </HBox>
      </HBox>
    </top>
    <left>
      <VBox>
        <Canvas fx:id="canvas" width="400" height="400" onMouseDragged="#canvasOnMouseDragged"
                onMouseClicked="#canvasOnMouseReleased" onMousePressed="#canvasOnMousePressed"/>
      </VBox>
    </left>
    <right>
      <VBox alignment="CENTER_RIGHT">
        <Canvas fx:id="resultCanvas" width="400" height="400"/>
      </VBox>
    </right>
    <bottom>
      <HBox alignment="BOTTOM_LEFT" prefHeight="50">
        <HBox alignment="CENTER_LEFT" prefHeight="50">
          <Label prefWidth="15"/>
          <Button fx:id="invertColors" text="Invert Colors" onAction="#onInvertColors"/>
          <Label prefWidth="10"/>
          <Button fx:id="undo" text="Undo Draw" onAction="#onUndoDraw"/>
          <Label prefWidth="10"/>
          <Label text="Brush Size:"/>
          <Label prefWidth="5"/>
          <Slider fx:id="brushSize" accessibleText="Brush Size" value="18" min="10" max="25" showTickLabels="true"/>
        </HBox>
        <Label prefWidth="300"/>
        <HBox alignment="CENTER_RIGHT" prefHeight="50">
          <Button fx:id="reset" text="Reset All" onAction="#onReset"/>
        </HBox>
      </HBox>
    </bottom>
  </BorderPane>
</VBox>
